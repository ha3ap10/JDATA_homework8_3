<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001" author="anazarenko">
        <createTable tableName="CUSTOMERS">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="bigint"/>
        </createTable>
        <createTable tableName="ORDERS">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="timestamp" defaultValueDate="now()">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="int">
                <constraints foreignKeyName="customer_id" references="CUSTOMERS(id)" nullable="false"/>
            </column>
            <column name="product_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="int"/>
        </createTable>
    </changeSet>
</databaseChangeLog>    